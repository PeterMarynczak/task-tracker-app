						<li class="nav-item">
							<a class="nav-link" href="{{ path ('logout') }}">Wyloguj</a>
						</li>
						{% endif %}
						{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
						<li class="nav-item">
							<a class="nav-link btn btn-success" href="{{ path ('login') }}">Logowanie</a>
						</li>
						<li class="nav-item">
							<a class="nav-link btn btn-danger" href="{{ path ('registration') }}">Rejestracja</a>
						</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}

		<footer class="footer">
			<div class="footer-bottom">
				<div class="container">
					<div class="d-flex justify-content-between align-items-center">
						<div class="d-flex align-items-center">
